lane :test_flight do
  increment_build_number
  build_app(scheme: "Tangem")
  upload_to_app_store(
    username: "bergencroc@gmail.com",
    force: true
  )
  git_commit(
   path: "*", 
   message: "Build bump [" + build_number + "]"
  )
  add_git_tag(
   grouping: "fastlane-builds",
   prefix: "v",
   build_number: build_number
  )
  push_to_git_remote
end